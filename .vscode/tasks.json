// tasks.json
{
    // https://code.visualstudio.com/docs/editor/tasks
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "g++",
            "linux": {
                "command": "/usr/bin/g++"
            },
            "args": [ 
                "${file}",
                "-o",
                "${fileBasenameNoExtension}.exe",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "dependsOrder": "sequence",
            "dependsOn": ["echo test 1", "echo test 2"]

        },
        {
            "label": "echo test 1",
            "type": "shell",
            "command": "echo Hello Test: task 1!"
        },
        {
            "label": "echo test 2",
            "type": "shell",
            "command": "echo Hello Test: task 2!"
        }
    ]
}